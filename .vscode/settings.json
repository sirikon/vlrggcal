{
  "deno.enable": true,
  "deno.importMap": "./import_map.json",
  "deno.lint": true,
  "deno.unstable": true,
  "deno.config": "./deno.json",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[python]": {
    "editor.tabSize": 4
  }
}
